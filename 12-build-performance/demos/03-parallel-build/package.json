{
  "name": "03-parallel-build",
  "version": "1.0.0",
  "description": "Webpack 并行构建优化对比 Demo",
  "scripts": {
    "clean": "rm -rf dist node_modules/.cache",
    "build:single": "npm run clean && webpack --mode production --config webpack.single.config.js",
    "build:parallel": "npm run clean && webpack --mode production --config webpack.parallel.config.js",
    "build:single:cached": "webpack --mode production --config webpack.single.config.js",
    "build:parallel:cached": "webpack --mode production --config webpack.parallel.config.js",
    "compare": "node compare.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "thread-loader": "^4.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
